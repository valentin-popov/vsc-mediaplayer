{
  "name": "vsc-spotify",
  "displayName": "vsc-spotify",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.95.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "vsc-spotify.enterCredentials",
        "title": "Enter Client Credentials"
      },
      {
        "command": "vsc-spotify.playlists.reload",
        "title": "Reload Playlists",
        "icon": "$(refresh)"
      },
      {
        "command": "vsc-spotify.tracks.reload",
        "title": "Reload Tracks",
        "icon": "$(refresh)"
      },
      {
        "command": "vsc-spotify.playlists.load",
        "title": "Load playlists",
        "icon": "$(refresh)"
      },
      {
        "command": "vsc-spotify.login",
        "title": "Spotify: Login"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "vsc-spotify.playlists.load",
          "group": "navigation",
          "when": "view == playlists"
        },
        {
          "command": "vsc-spotify.tracks.reload",
          "group": "navigation",
          "when": "view == tracks"
        }
      ]
    },
      "viewsContainers": {
        "activitybar": [
          {
            "id": "spotify-player",
            "title": "Spotify",
            "icon": "resources/spotify-logo.svg"
          }
        ]
      },
      "views": {
        "spotify-player": [
          {
            "id": "playlists",
            "name": "Playlists"
          },
          {
            "id": "tracks",
            "name": "Tracks"
          }
        ]
      }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.95.0",
    "@types/mocha": "^10.0.9",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.10.0",
    "@typescript-eslint/parser": "^8.7.0",
    "eslint": "^9.13.0",
    "typescript": "^5.6.3",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1"
  }
}